{
  "name": "ecom",
  "type": "project:application",
  "paths": {
    "root": "src",
    "resources": "resources",
    "elements": "resources/elements",
    "attributes": "resources/attributes",
    "valueConverters": "resources/value-converters",
    "bindingBehaviors": "resources/binding-behaviors"
  },
  "dependencies": [

    "jquery",
    {
      "name": "popper.js",
      "path": "../node_modules/popper.js/dist/umd",
      "main": "popper.min"
    },
    {
      "name": "bootstrap",
      "path": "../node_modules/bootstrap/dist",
      "main": "js/bootstrap.min",
      "deps": ["jquery"],
      "exports": "$",
      "resources": [
        "css/bootstrap.css"
      ]
    },
    {
      "name": "moment",
      "path": "../node_modules/moment",
      "main": "min/moment-with-locales",
      "resources": [
        "**/*.{css,html}"
      ]
    }
  ],
  "transpiler": {
    "id": "typescript",
    "fileExtension": ".ts"
  },
  "build": {
    "options": {
      "server": "dev",
      "extractCss": "prod",
      "coverage": false
    }
  },
  "platform": {
    "hmr": false,
    "open": false,
    "port": 6060,
    "host": "localhost",
    "output": "dist"
  }
}
